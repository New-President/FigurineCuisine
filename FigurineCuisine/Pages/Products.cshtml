@page
@model FigurineCuisine.Pages.ProductsModel

@{
    ViewData["Title"] = "Products";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <input type="hidden" asp-for="FigurineCategory" />
        Name: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].IPAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].ConcurrencyStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApplicationRole) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IPAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
