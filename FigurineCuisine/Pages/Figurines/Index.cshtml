@page "{searchString?}"
@model FigurineCuisine.Pages.Figurines.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>



<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Figurine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figurine[0].RetailerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figurine[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figurine[0].Manufacturer)
            </th>
            <th> @Html.DisplayNameFor(model => model.Figurine[0].Price) </th>

            <th> @Html.DisplayNameFor(model => model.Figurine[0].Category) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Figurine)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetailerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td> @Html.DisplayFor(modelItem => item.Price) </td>
                <td> @Html.DisplayFor(modelItem => item.Category) </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
