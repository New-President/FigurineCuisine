@page
@model RegisterModel
@{
    ViewData["Title"] = "Register Now!";
}
<head>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
    <script>
    var onloadCallback = function(){
        grecaptcha.render('divcaptcha', {
            'sitekey': '6LdoIPwgAAAAAJyLjmo1zMMeYEEgeT9psjyqfzR4',
            'callback' : function (response){
                $('#txtcaptcha').val('t');
            }
        })
    }
    </script>
</head>

<div class="row">
    <div class="col-md-6">
    <h1 style="text-align: center">@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
           <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.FirstName">First Name</label>
                <input asp-for="Input.FirstName" type="text" class="form-control" id="inputFirstName" placeholder="First Name">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.LastName">Last Name</label>
                <input asp-for="Input.LastName" type="text" class="form-control" id="inputFirstName" placeholder="First Name">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
         <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" type="email" class="form-control" id="inputEmail" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Username">Username</label>
                <input asp-for="Input.Username" type="text" class="form-control" id="inputUsername" placeholder="Username">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="inputCfmPassword" placeholder="Password">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Address">Address</label>
            <input asp-for="Input.Address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main Street..">
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Region">Region</label>
                <select asp-for="Input.Region" id="inputRegion" class="form-control">
                    <option selected>Choose...</option>
                    <option>North</option>
                    <option>North-East</option>
                    <option>Central</option>
                    <option>East</option>
                    <option>West</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Zip">Postal Code</label>
                <input asp-for="Input.Zip" type="text" class="form-control" id="inputPostalCode">
                 <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-row">
            <input asp-for="Input.Recaptcha" id="txtcaptcha" type="text" style="display:none" class="form-control" />
            <div id="divcaptcha"></div>
            <span asp-validation-for="Input.Recaptcha" class="text-danger"></span>
        </div>
        <br />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <br />
        <br />
        <br />
        <div class="col-md-12" style="display: flex; justify-content:center">
            <img style="height: 80%; width: 80%" src="https://cdn.shopify.com/s/files/1/0299/6564/8008/products/bld1_large.jpg?v=1656494353" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
